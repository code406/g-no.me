---
import ThemeToggle from "@/components/ThemeToggle.astro";
import Layout from "@/layouts/Layout.astro";
import { Github } from "lucide-astro";
---

<script>
	const audio = new Audio("/woo.mp3");
	document.getElementById("shortenButton")?.addEventListener("click", () => {
		audio.play();
	});
</script>

<Layout title="Gnome URL Shortener">
	<article>
		<header>
			<a href="/">
				<img src="/favicon.svg" alt="Logo" width="150" height="150" />
			</a>
			<a href="/">
				<h1>g-no.me</h1>
			</a>
			<h5>a URL shortener with a twist</h5>
		</header>
		<form id="form" autocomplete="off">
			<label>
				<span class="help-text">Enter a URL</span>
				<input
					required
					type="url"
					id="input_url"
					name="input_url"
					placeholder="https://example.com"
				/>
			</label>
			<button id="shortenButton" type="submit">Make it short</button>
		</form>
		<footer>
			<a
				href="https://github.com/code406/g-no.me"
				class="icon-link"
				title="Github Repo"
				aria-label="Github Repo"
			>
				<Github alt="Github" />
			</a>
			<ThemeToggle />
		</footer>
	</article>

	<style>
		header a {
			text-decoration: none;
		}
		header {
			text-align: center;
			padding: 1.5rem 1rem 1rem;
		}
		button {
			font-weight: bold;
			width: 100%;
		}
		form {
			padding: 1rem 1rem 0.5rem;
			display: flex;
			flex-direction: column;
			gap: 0.5rem;
		}
		.help-text {
			display: block;
			padding-bottom: 0.5rem;
		}
		article {
			max-width: 600px;
			margin: auto;
		}
		footer {
			color: var(--pico-secondary);
			display: flex;
			opacity: 0.75;
			gap: 1.5rem;
			justify-content: end;
			align-items: center;
			padding: 1.25rem 2rem 1rem;
		}
		.icon-link {
			color: var(--pico-secondary);
			text-decoration: none;
			margin: 0;
			padding: 0.25rem 0.25rem 0.5rem;
		}
	</style>
</Layout>
