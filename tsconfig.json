{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/assets/*": [
        "src/assets/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/layouts/*": [
        "src/layouts/*"
      ],
      "@/utils": [
        "src/utils/index.ts"
      ],
    }
  },
  "include": [
    "*.ts",
    "src/**/*.astro"
  ]
}